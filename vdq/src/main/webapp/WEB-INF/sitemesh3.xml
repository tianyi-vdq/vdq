<sitemesh>
	 <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
     <mapping path="/*" decorator="/page/decorators/main.jsp" /> 
     <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 --> 
     <mapping path="**/source/**" exclue="true" />  
     <mapping path="**/source/**" exclue="true" /> 
     <!-- <mapping path="**/fileUpload/**" exclue="true" />  -->
     <mapping path="**/index.do**" exclue="true" />
     <mapping path="**/login.do**" exclue="true" />
     <mapping path="**/jsonLoad**" exclue="true" />
     <mapping path="**/jsonSave**" exclue="true" />
     <mapping path="**/jsonDelete**" exclue="true" />
     <mapping path="**/jsonUpdate**" exclue="true" />
</sitemesh>
    
